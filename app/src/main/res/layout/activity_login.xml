<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_icon"
    android:padding="@dimen/dp_36"
    tools:context=".LoginActivity">
    <EditText
        android:id="@+id/login_user_et"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_18"
        android:textColor="#fff"
        android:layout_height="wrap_content"
        android:hint="请输入用户名..."
        android:drawablePadding="@dimen/dp_20"
        android:textColorHint="#fff"
        android:background="@drawable/editext"
        android:drawableLeft="@mipmap/login_icon_phone"
        android:layout_marginTop="@dimen/dp_160"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/login_pwd_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_18"
            android:textColor="#fff"
            android:drawablePadding="@dimen/dp_20"
            android:drawableLeft="@mipmap/login_icon_lock"
            android:hint="请输入密码..."
            android:inputType="textPassword"
            android:background="@drawable/editext"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="144dp"
            android:layout_marginTop="50dp"/>

        <ImageView
            android:id="@+id/mHidePass"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/login_icon_eye"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <CheckBox
            android:id="@+id/mJizhu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:buttonTint="@android:color/white"
            android:text="记住密码"/>
        <TextView
            android:id="@+id/reg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="快速注册"/>
    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:text="登录"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="#ff5f71"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="276dp"
        android:background="@drawable/button_shape"
        android:layout_marginTop="@dimen/dp_180"/>
</LinearLayout>