<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_85"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/mylist_background"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/mAllList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/all_list"
                android:button="@null"
                android:text="全部订单"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/mDaifokuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/pay"
                android:button="@null"
                android:text="待付款"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/mDaishouhuo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="待收货"
                android:drawableTop="@mipmap/shouhuo"
                android:gravity="center_horizontal"
                >
            </RadioButton>
            <RadioButton
                android:id="@+id/mDaipingjia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/pingjia"
                android:button="@null"
                android:text="待评价"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/mWancheng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/finish"
                android:button="@null"
                android:text="完成"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
</LinearLayout>
